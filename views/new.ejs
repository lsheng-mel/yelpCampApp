<% include ./partials/header %>

<div class='container'>
	<h1>Add New Campground</h1>
	<form action="/campgrounds" method="POST">
		<div class='form-group'>
			<label>Name</label>
			<input type="text" name="new_campground[name]" class='form-control' placeholder="name" >
		</div>

		<div class='form-group'>
			<label>Description</label>
			<input type="text" name="new_campground[description]" class='form-control' placeholder="description">
		</div>

		<div class='form-group'>
			<label>Image URL</label>
			<input text="text" name="new_campground[image]" placeholder="url" class='form-control'>
		</div>

		<button type="submit" class='btn btn-lg btn-primary'>Submit</button>
	</form>
	<a href='/'>Go Back</a>
</div>


<% include ./partials/footer %>
